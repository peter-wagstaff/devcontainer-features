{
    "name": "Agent Credentials",
    "id": "agent-creds",
    "version": "1.0.0",
    "description": "Persist coding agent credentials (Claude Code and Codex) across dev container rebuilds using Docker volumes",
    "mounts": [
        {
            "source": "claude-creds",
            "target": "/mnt/.claude",
            "type": "volume"
        },
        {
            "source": "codex-creds",
            "target": "/mnt/.codex",
            "type": "volume"
        }
    ]
}
